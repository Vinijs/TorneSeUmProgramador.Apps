<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoApp.TorneSeUmProgramador.App.Views.PaginaInicial"
             Title="PaginaInicial">
    <Grid Padding="10" RowDefinitions="70,*">
        <Entry x:Name="pesquisaEntry" Placeholder="Pesquisar tarefa ..." TextChanged="pesquisaEntry_TextChanged" />
        <CollectionView x:Name="TarefasCollectionView" EmptyView="NÃ£o existem tarefas cadastradas" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding Nome}" />
                        <Label Text="{Binding Descricao}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button
            Grid.Row="1"
            Text="+ Adicionar Tarefa"
            Clicked="AdicionarTarefa_ButtonClicked"
            Background="Green"
            TextColor="White"
            CornerRadius="10"
            HorizontalOptions="Center"
            VerticalOptions="End" />
    </Grid>
</ContentPage>
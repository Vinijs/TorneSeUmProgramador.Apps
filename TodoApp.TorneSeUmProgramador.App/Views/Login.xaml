<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TodoApp.TorneSeUmProgramador.App.Views.Login"
             Title="Login">
    <VerticalStackLayout Padding="10" VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20">
            <Image
                HeightRequest="100"
                HorizontalOptions="Center"
                Source="checklist.png"
                VerticalOptions="Center"
                WidthRequest="100" />
            <Label 
                Text="Aplicativos Tarefas - Torne Se Um Programador"
                FontAttributes="Bold"
                FontSize="18"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <Entry
            x:Name="EmailEntry"
            Margin="0,20,0,0"
            Placeholder="Digite seu email..." />
        <Entry
            x:Name="SenhaEntry"
            IsPassword="True"
            Margin="0,20,0,0"
            Placeholder="Digite sua senha..." />

        <Button Clicked="BtnLogin_Clicked" Text="Login" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Viagens.TorneSeUmProgramador.App.ViewModels.Components"
             x:DataType="vm:WhatsAppChatViewModel"
             x:Class="Viagens.TorneSeUmProgramador.App.Views.Components.WhatsAppChat">
    <Frame
        Padding="0"
        AbsoluteLayout.LayoutBounds="1, 1, AutoSize, AutoSize"
        AbsoluteLayout.LayoutFlags="PositionProportional"
        BackgroundColor="Transparent"
        CornerRadius="50"
        HasShadow="False">
        <ImageButton
            BackgroundColor="Transparent"
            Command="{Binding EnviarMensagemCommand}"
            HeightRequest="60"
            Source="whatsapp_icon.png"
            WidthRequest="60" />
    </Frame>
</ContentView>
